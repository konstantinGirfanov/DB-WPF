<Window x:Class="DummyDatabase.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DummyDatabase.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Какую таблицу открыть?" FontSize="15"/>
        <ScrollViewer Grid.Row="0" Grid.Column="0" Margin="0 25 0 0">
            <ListBox x:Name="schemeList" MouseDoubleClick="LoadScheme"></ListBox>
        </ScrollViewer>

        <ScrollViewer Grid.Row="1" Grid.Column="0">
            <ListBox x:Name="schemeColumnsList"></ListBox>
        </ScrollViewer>

        <TextBlock Text="Имеющиеся строки данных:" FontSize="15" Grid.Column="1"/>
        <ScrollViewer Grid.Column="1" Grid.RowSpan="2" Margin="0 25 0 0">
            <ListBox x:Name="schemeDataRows"></ListBox>
        </ScrollViewer>
    </Grid>
</Window>
